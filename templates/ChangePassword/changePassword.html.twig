{% extends 'base.html.twig' %}

{% block title %} Changer de mot de passe {% endblock %}

{% block h1 %} Changer de mot de passe {% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Changer de mot de passe</li>
        </ol>
    </nav>
{% endblock %}
{% block main %}
    {{ form_start(form) }}
    {{ form_row(form.oldPassword) }}
    {{ form_row(form.newPassword) }}
    <button type="submit" class="btn btn-primary">S'inscrire</button>

    {{ form_end(form) }}
{% endblock %}