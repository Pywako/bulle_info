<nav aria-label="pagination">
    <ul class="pagination justify-content-center">
        {% if pagination.page > 1 %}
            <li class="page-item"><a class="page-link" href="{{ path(pagination.route, {'page': 1}) }}">Première page</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(pagination.route, {'page': pagination.page-1}) }}" aria-label="Previous"><span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span></a></li>
        {% endif %}
        {% for p in range(max(pagination.page-4, 1),
            min(pagination.page+4, pagination.page_count)) %}
            <li {% if p == pagination.page %} class="page-item active"{% endif %}><a class="page-link" href="{{ path(pagination.route,{'page': p}) }}">{{ p }}</a></li>
        {% endfor %}
        {% if pagination.page<pagination.page_count %}
            <li class="page-item"><a class="page-link" href="{{ path(pagination.route, {'page': pagination.page+1}) }}" aria-label="Next"><span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span></a></li>
            <li class="page-item"><a class="page-link" href="{{ path(pagination.route, {'page': pagination.page_count}) }}">Dernière page</a></li>
        {% endif %}
    </ul>
</nav>
