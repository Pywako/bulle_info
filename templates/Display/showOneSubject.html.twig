{% extends 'base.html.twig' %}
{% block title %}Bulle d'info - consultation{% endblock %}

{% block header_img %}
    <div id="header_img">
        <div class="h-100" style="background-image: url('pictures/library3.jpg')"></div>
    </div>
{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('show') }}">catégories</a></li>
            <li class="breadcrumb-item active" aria-current="page">Sujets</li>
        </ol>
    </nav>
{% endblock %}


{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-12">

                <h4 class="text-center">{{ subject.title }}</h4>

                {% include 'Display/_resource.html.twig' %}

                <div class="row justify-content-end">
                    <p class="col-5">Crée par : {{ subject.user.username }}</p>
                </div>
                {% if pagination.page_count > 1 %}
                    {% include 'Display/_pagination_one_subject.html.twig' %}
                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}
