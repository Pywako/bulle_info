{% extends 'base.html.twig' %}
{% block title %}Bulle d'info - consultation{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Catégories</li>
        </ol>
    </nav>
{% endblock %}

{% block main %}
<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <h4>Catégories</h4>
            <div>
                {% if categorys is defined %}
                    {% if categorys is not null %}
                        {% for category in categorys %}
                            <p><a href="{{ path('show_subject', {'title': category.title }) }}">{{ category.title }}</a></p>
                        {% endfor %}
                    {% endif %}
                {% else %}
                    <p>Pas de catégories</p>
                {% endif %}

            </div>
        </div>
        <div class="col-9">
            <h4>Sujects</h4>
            {% block subject %}
            {% endblock %}
        </div>
    </div>
    {% endblock %}

