{% extends 'base.html.twig' %}
{% block title %}Bulle d'info - consultation{% endblock %}

{% block header_img %}
    <div id="header_img">
        <div class="h-100" style="background-image: url('pictures/library3.jpg')"></div>
    </div>
{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Catégories</li>
        </ol>
    </nav>
{% endblock %}

{% block main %}
    <div class="btn-category d-block d-sm-none justify-content-center">
        <div class="row justify-content-center">
            {% include 'Display/_category_select.html.twig' %}
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-3 d-none d-sm-block">
                <h4 class="text-center">Catégories</h4>
                <div>
                    {% include 'Display/_category.html.twig' %}
                </div>
            </div>
            <div class="col-12 col-md-9">
                <h4 class="text-center">Sujets</h4>
                {% include 'Display/_subjec.html.twig' %}

                {% if pagination.page_count > 1 %}
                    {% include 'Display/_pagination.html.twig' %}
                {% elseif pagination.page_count == 1 %}
                {% else %}
                    <p class="text-center fond_color"> Cette catégorie n'a pas encore de sujet.<br>
                        Mais ça ne serait tarder !
                    </p>
                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}
