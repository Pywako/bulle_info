{% extends 'base.html.twig' %}
{% block title %}Publication - 1 - ressource{% endblock %}

{% block h1 %}<h1 class="col-sm-12 my-auto">Publication</h1>{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Ressource</li>
        </ol>
    </nav>
{% endblock %}
{% block main %}

    <div class="container">
        <h2>Bienvenue dans l'interface de publication</h2>
        <h4>
            Commençons par créer votre ressource
        </h4>

        {{ form_start(form) }}

        {{ form_row(form.title) }}
        {{ form_row(form.summary) }}
        {{ form_row(form.link) }}
        {{ form_row(form.tag) }}

        <button type="submit" class="btn btn-success">Continuer</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
