{% extends 'base.html.twig' %}
{% block title %}Publication - 3 - Catégorie{% endblock %}

{% block h1 %}<h1 class="col-sm-12 my-auto">Publication</h1>{% endblock %}

{% block header_img %}
    <div id="header_img">
        <div class="h-100" style="background-image: url('../pictures/milky-way.jpg')"></div>
    </div>
{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('publication_step1') }}">Resource</a></li>
            <li class="breadcrumb-item"><a href="{{ path('publication_step2') }}">Sujet</a></li>
            <li class="breadcrumb-item active" aria-current="page">Catégorie</li>
        </ol>
    </nav>
{% endblock %}
{% block main %}
    <div class="container fond_color">
        <h5>Choisissez une catégorie : </h5>
        {{ form_start(form) }}

        {{ form_errors(form.title) }}
        {{ form_row(form.title) }}

        <button type="submit" class="btn btn-success">Publier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}